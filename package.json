{
  "name": "igus-miro-kanban-statisics",
  "version": "0.1.0",
  "description": "Tools for managing and analysinz our kanban board in miro",
  "homepage": "",
  "repository": "",
  "license": "propietary",
  "private": "true",
  "email": "de-bauhaus@igus.net",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {},
  "devDependencies": {
    "http-server": "latest",
    "htmllint": "latest",
    "chai": "latest",
    "complexity-report-html": "latest",
    "eslint": "latest",
    "eslint-plugin-node": "latest",
    "gulp": "latest",
    "gulp-file-include": "latest",
    "mocha": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "sinon-chai": "latest"
  },
  "scripts": {
    "local": "http-server src/htdocs -c-1 -p 8081",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint src/js/*.js",
    "lint:jsfix": "eslint --fix --ext .js,.jex .",
    "lint:html": "htmllint src/html/*.html",
    "test": "nyc --reporter=text mocha --recursive",
    "test:unit": "mocha --recursive test/app",
    "test:watch": "mocha \"test/**/*.js\" --watch --watch-extensions js",
    "complexity:src": "complexity-report-html src && mv .complexity-report/report.html .complexity-report/src.html",
    "complexity:test": "complexity-report-html test && mv .complexity-report/report.html .complexity-report/test.html",
    "complexity": "npm run complexity:src; npm run complexity:test"
  }
}
